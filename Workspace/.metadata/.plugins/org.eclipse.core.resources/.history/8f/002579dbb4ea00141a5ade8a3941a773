package com.goeurope.test;

import org.apache.http.HttpEntity;
import org.apache.http.client.methods.CloseableHttpResponse;
import org.apache.http.client.methods.HttpGet;
import org.apache.http.impl.client.CloseableHttpClient;
import org.apache.http.impl.client.HttpClients;
import org.apache.http.util.EntityUtils;

public class GoEuropeTest {

	public static void main(String[] args) {
		
		// TODO: validate
		String query = args[0];

		
		getLocation(query);
	}
	
	private void getLocation(String query) throws Exception{
		
		String baseUri = "http://www.goeuro.com/GoEuroAPI/rest/api/v2/position/suggest/en";
		String uri = baseUri + "/" + query;
		
		System.out.println("Requested URI:" + uri);
		
		CloseableHttpClient httpclient = HttpClients.createDefault();
		HttpGet httpGet = new HttpGet(uri);
		
		CloseableHttpResponse response1 = httpclient.execute(httpGet);
		try {
		    System.out.println(response1.getStatusLine());
		    HttpEntity entity1 = response1.getEntity();
		    
		    System.out.println(EntityUtils.toString(entity1));
		    
		    EntityUtils.consume(entity1);
		} finally {
		    response1.close();
		}
	}

}
